//- Базовая разметка страницы
mixin base-page(page)
  doctype html
  html(lang='en')
    head
      include ../meta/_head
    body
      //include ../svg/svg
      include ../partials/_header
    main
      if block
        block
      //-include ../_index
      //- скрипты
    include ../partials/_footer

    include ../meta/_scripts


//svg-icon
mixin icon(name, mod)
  - mod = mod || ''
  svg(class="icon icon-" + name + " " + mod)
    use(xlink:href="img/sprite.svg#" + name)